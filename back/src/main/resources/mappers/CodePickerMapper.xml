<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dz.back.commons.codepicker.mapper.CodePickerMapper">

	<select id="CompanyfindByName" resultType="ComDTO">
	    SELECT * FROM sco
	    WHERE co_nm LIKE CONCAT('%', #{name}, '%')
	</select>
	
	<select id="CompanyfindByCode" resultType="ComDTO">
	    SELECT * FROM sco
	    WHERE co_cd = #{code}
	</select>
	
	<select id="RegCarfindByName" resultType="CarDTO">
	    SELECT * FROM abizcar
	    WHERE car_nm LIKE CONCAT('%', #{name}, '%')
	</select>
	
